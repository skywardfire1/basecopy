#!/bin/bash

##################################################################################
####                                                                          ####
####    Скрипт, закидывающий резервные копии баз в облачное хранилище Кима    ####
####    Доткома. Поскольку места на диске там не очень много, то каждый       ####
####    будний день удаляем самую старую копию.                               ####
####                                                                          ####
####                          Version 1.0                                     ####
####                                                                          ####
##################################################################################

DAY=`date +%u`

case $DAY in

  1 ) mega-rm -fr 01* 02* 03* ;;

  2 ) mega-rm -fr 02* 03* 04* ;;

  3 ) mega-rm -fr 03* 04* 05* ;;

  4 ) mega-rm -fr 04* 05* 01* ;;

  5 ) mega-rm -fr 01* 02* 05* ;;

esac

mega-put -c -q  /srv/raid/base/0`date +%u`_`date +%A`
