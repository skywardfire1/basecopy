#!/bin/bash

##################################################################################
####                                                                          ####
####    Скрипт, который делает дампы баз данных PSQL, затем кладёт их в       ####
####    облачное хранилище.                                                   ####
####                                                                          ####
##################################################################################

rm -f /srv/backup/op_market.baza

pg_dump -p порт -U postgres -d op_market -h хостнейм > /srv/backup/op_market.baza

mega-rm -f /op_market.baza

mega-put -cq /srv/backup/op_market.baza /
